<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".SqlPracticeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Question 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="323dp"
                android:layout_height="172dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2C3539">

                <TextView
                    android:id="@+id/question1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="1. What does SQL stand for?"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/question1btn1"
                    android:layout_width="132dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="70dp"
                    android:text="Structured Query Language" />

                <Button
                    android:id="@+id/question1btn2"
                    android:layout_width="132dp"
                    android:layout_height="73dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="70dp"
                    android:text="Simple Query Language" />
            </androidx.cardview.widget.CardView>

            <!-- Question 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="323dp"
                android:layout_height="172dp"
                android:backgroundTint="#2C3539"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/question2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="2. Which of the following is a DDL command?"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/question2btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="90dp"
                    android:text="CREATE" />

                <Button
                    android:id="@+id/question2btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="90dp"
                    android:text="SELECT" />
            </androidx.cardview.widget.CardView>

            <!-- Question 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="323dp"
                android:layout_height="172dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2C3539">

                <TextView
                    android:id="@+id/question3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="3. Which command is used to retrieve data from a database?"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/question3btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="90dp"
                    android:text="GET" />

                <Button
                    android:id="@+id/question3btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="90dp"
                    android:text="SELECT" />
            </androidx.cardview.widget.CardView>

            <!-- Question 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="323dp"
                android:layout_height="172dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#2C3539">

                <TextView
                    android:id="@+id/question4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="4. What does DML stand for?"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/question4btn1"
                    android:layout_width="104dp"
                    android:layout_height="83dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="70dp"
                    android:text="Data Manipulation Language" />

                <Button
                    android:id="@+id/question4btn2"
                    android:layout_width="143dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="70dp"
                    android:text="Data Management Language" />
            </androidx.cardview.widget.CardView>

            <!-- Question 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="323dp"
                android:layout_height="172dp"
                android:backgroundTint="#2C3539"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/question5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:text="5. Which SQL command is used to remove a table?"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/question5btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="90dp"
                    android:text="DELETE" />

                <Button
                    android:id="@+id/question5btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="90dp"
                    android:text="DROP" />
            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/submitbtn"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#388E3C"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:text="Submit" />

            <Button
                android:id="@+id/btn"
                android:layout_width="301dp"
                android:layout_marginLeft="10dp"
                android:layout_height="50dp"
                android:text="try other language" />

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>